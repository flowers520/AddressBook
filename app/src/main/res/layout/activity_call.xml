<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jim.addressbook.CallActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="20dp"
        android:textColor="#0000ff"
        android:background="@drawable/selcetor_button"
        android:id="@+id/tv_callCancel"
        android:clickable="true"
        android:onClick="callOnCancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textSize="20dp"
        android:textColor="#0000ff"
        android:background="@drawable/selcetor_button"
        android:id="@+id/tv_callEdit"
        android:clickable="true"
        android:onClick="callOnEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_callCancel"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30dp"
            android:textColor="#000000"
            android:id="@+id/tv_callName" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/iv_touxiang"
                android:background="@drawable/tt"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:background="#ffffff"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="手机"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_telephone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="18773358628"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_callnum" />

            </LinearLayout>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dx"
                android:id="@+id/imageButton_dx"
                android:onClick="imageBuDx"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dh"
                android:id="@+id/imageButton_dh"
                android:onClick="imageBuDh"/>


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40sp"
            android:textColor="#000000"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:id="@+id/et_callnote"
            android:hint="备注"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="@drawable/selector_lv"
            android:layout_gravity="center_horizontal" />



    </LinearLayout>

</RelativeLayout>
